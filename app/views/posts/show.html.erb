<p class="notice"><%= notice %></p>

<h2><%= @post.titulo %></h2>

<p style="text-align: center">
  <%= image_tag @post.avatar.url (:medium)%>
</p>

<p><%= @post.conteudo %></p> 

<h3>Coment√°rios :</h3>
<% @post.comentarios.each do |comentario| %>

  <p>
    <b>Autor:</b>
    <%= comentario.autor %>
    
  </p>

  <p>
    <b>Comentario</b>
    <%= comentario.conteudo %>
  </p>
  <p>
    <b>Criado em:</b>
    <%= comentario.created_at %>
  </p>
  
<p>
  <% if user_signed_in? %>
  <%= link_to 'Apagar Comentario', [comentario.post, comentario],
              :confirm => 'Tem certeza?',
              :method => :delete %>
<% end %>
</p>

<hr />
<% end %>
 
<h2>Adicione um comentario:</h2>
<%= form_for([@post, @post.comentarios.build]) do |f| %>
  <div class="field">

    <% if !user_signed_in? %>
    <%= f.label :autor %><br />
    <%= f.text_field :autor %>
  </div>
  <div class="field">
    <%= f.label :conteudo %><br />
    <%= f.text_area :conteudo %>
  </div>

  <% else %>
  
    <div class="field">
    <%= f.label :conteudo %><br />
    <%= f.text_area :conteudo %>
  </div>
    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
<br />
